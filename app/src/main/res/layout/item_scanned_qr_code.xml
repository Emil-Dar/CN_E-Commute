<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/button_delete"
        android:layout_toLeftOf="@+id/button_delete"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="48dp">

        <TextView
            android:id="@+id/operator_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator's Name"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/home_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tr_plate_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TR Plate Number"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/contact_no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No."
            android:textSize="16sp"
            android:padding="4dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:src="@android:drawable/ic_menu_delete" />
</RelativeLayout>
