<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/operator_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operator's Name"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/home_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Address"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/tr_plate_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TR Plate Number"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/contact_no_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No."
        android:textSize="16sp"
        android:padding="4dp" />

</LinearLayout>
