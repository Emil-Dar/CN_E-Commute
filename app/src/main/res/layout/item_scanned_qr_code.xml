<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with timestamp and action icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/scan_timestamp_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dec 25, 2024 10:30 AM"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/icon_action"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_archive_box"
                android:layout_marginStart="12dp"
                android:contentDescription="Archive or Restore"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

        <!-- QR Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_light"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView android:id="@+id/driver_id_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver ID: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp" />

            <TextView android:id="@+id/driver_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver Name: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp" />

            <TextView android:id="@+id/franchise_id_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franchise ID: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp" />

            <TextView android:id="@+id/operator_id_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operator Name: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp" />

            <TextView android:id="@+id/toda_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODA: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp" />
        </LinearLayout>

        <!-- Scan Summary -->
        <LinearLayout
            android:id="@+id/scan_summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/icon_scan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_qr_code"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_scan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanned: 2 times today"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Scan Timestamps -->
        <TextView
            android:id="@+id/text_scan_timestamps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Oct 5, 2025 at 8:12 AM\n• Oct 5, 2025 at 4:45 PM"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@android:color/holo_red_dark"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:drawablePadding="4dp"
                android:drawableTint="@android:color/holo_red_dark"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_report"
                style="@style/Widget.Material3.Button"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Report"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_light"
                app:cornerRadius="8dp"
                android:drawableStart="@android:drawable/ic_menu_report_image"
                android:drawablePadding="4dp"
                android:drawableTint="@android:color/white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
