<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scanned QR Code"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/scan_datetime_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 25, 2024 10:30 AM"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- QR Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_light"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/driver_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver Name: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp"
                android:contentDescription="Driver Name" />

            <TextView
                android:id="@+id/driver_contact_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver Contact No.: Loading..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp"
                android:contentDescription="Driver Contact Number" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="@color/medium_gray"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@android:color/holo_red_dark"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:drawablePadding="4dp"
                android:drawableTint="@android:color/holo_red_dark"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_report"
                style="@style/Widget.Material3.Button"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Report"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_light"
                app:cornerRadius="8dp"
                android:drawableStart="@android:drawable/ic_menu_report_image"
                android:drawablePadding="4dp"
                android:drawableTint="@android:color/white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
