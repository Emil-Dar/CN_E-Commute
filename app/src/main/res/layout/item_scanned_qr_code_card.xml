<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Text fields -->
        <TextView
            android:id="@+id/operator_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operator's Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/age_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/home_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tr_plate_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TR Plate Number"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/contact_no_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact No."
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Horizontal layout for action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Delete"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_report"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Report"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_blue_dark"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
