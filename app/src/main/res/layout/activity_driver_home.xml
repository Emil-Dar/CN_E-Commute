<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_blue"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title_driver_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CN E-COMMUTE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true" />

        <!-- Notification icon container -->
        <FrameLayout
            android:id="@+id/notification_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <!-- Bell icon -->
            <ImageView
                android:id="@+id/btn_notifications"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_notif_light"
                app:tint="@android:color/white"
                android:contentDescription="Notifications" />

            <!-- Badge -->
            <TextView
                android:id="@+id/notification_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end|top"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </FrameLayout>
    </RelativeLayout>

    <!-- Fragment Container (Main Area) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/driver_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/driver_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_blue"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/black"
        app:menu="@menu/driver_nav_menu"
        app:labelVisibilityMode="labeled" />

</RelativeLayout>
