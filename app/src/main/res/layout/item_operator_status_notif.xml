<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_notification_unviewed"
    android:padding="12dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp">

    <!-- Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="The driver you registered has been verified."
            android:textColor="#222"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Verified"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/status_badge_bg" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            app:tint="#555"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Details -->
    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_lightgray_bg"
            android:padding="8dp">

            <TextView
                android:id="@+id/detailsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Details"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:textSize="13sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tv_driver_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver ID: DR0001"
                android:textSize="13sp"
                android:textColor="@color/dark_gray"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver Name: Juan Dela Cruz"
                android:textSize="13sp"
                android:textColor="@color/dark_gray"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Verified"
                android:textSize="13sp"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated: Oct 27, 2025 â€¢ 11:15 PM"
                android:textColor="@color/medium_gray"
                android:textSize="12sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
