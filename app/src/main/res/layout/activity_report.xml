                    android:layout_height="wrap_content"
                    android:text="TODA: Loading..."
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="6dp"
                    android:contentDescription="TODA" />

            </LinearLayout>



