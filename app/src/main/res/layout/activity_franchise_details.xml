<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <!-- Franchise Detail Card (same style as assigned driver card, non-clickable) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/franchiseHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franchise Detail"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/detailsFranchiseId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franchise ID: --"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/detailsRegDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Date: --"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/detailsToda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODA: --"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/detailsRenewalStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renewal Status: --"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/detailsRenewalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renewal Date: --"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable section for assigned driver -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/franchiseHeaderLayout"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Assigned Driver Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/assignedDriverCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/assignedDriverHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assigned Driver"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"/>

                        <TextView
                            android:id="@+id/assignedDriverName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name: --"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:id="@+id/assignedAtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assigned at: --"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/viewMoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details_text"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_gravity="bottom|end"
                        android:padding="4dp"/>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Link outside the card -->
            <TextView
                android:id="@+id/assignmentHistoryLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Assignment History"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons fixed at the bottom -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/addDriverButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Driver"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/assignDriverButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Assign Driver"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
