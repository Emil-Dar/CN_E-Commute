<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <!-- Blue Header Section -->
    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3778C2" />

    <!-- Title -->
    <TextView
        android:id="@+id/qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR SCANNER"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@id/header" />

    <!-- Prompt Text -->
    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center the QR Code in the frame"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Decorated Barcode View -->
    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner_view"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/prompt_text"
        android:layout_marginTop="16dp"
        app:zxing_framing_rect_width="300dp"
        app:zxing_framing_rect_height="300dp" />

    <!-- Scan QR Code Button -->
    <Button
        android:id="@+id/scan_qr_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textColor="#333333"
        android:backgroundTint="#5894D8"
        android:textAllCaps="false"
        android:layout_below="@+id/barcode_scanner_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:elevation="4dp"
        android:padding="12dp" />

</RelativeLayout>
