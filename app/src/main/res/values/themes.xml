<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme using Material Design with NoActionBar -->
    <style name="Theme.CNECommute" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary branding color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- App-wide Material button style -->
        <item name="materialButtonStyle">@style/CustomButtonCNECommute</item>

        <!-- Customize status bar and navigation bar colors -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <!-- Custom Material Button Style -->
    <style name="CustomButtonCNECommute" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Dialog Button Style (Neutral or Negative) -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item> <!-- Black text -->
    </style>

    <!-- Dialog Positive Button Style -->
    <style name="PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accentColor</item> <!-- Accent color -->
        <item name="android:background">?attr/selectableItemBackground</item> <!-- Ripple effect -->
        <item name="elevation">2dp</item>
    </style>

    <!-- Unified Custom AlertDialog Theme -->
    <style name="CNECommuteDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">#000000</item> <!-- Dialog body text -->
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

</resources>
